<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="Fadderullan_BI_Bergen.SOSPage" 
	Title="SOS" 
	Icon="ic_warning">
	<ContentPage.Content>
		<StackLayout 
			VerticalOptions="Center" 
			HorizontalOptions="Center">
			<Label Text="This page will create a message containing your location, and you can send it to our emergency service." />
			<Label Text="This page is to use for emergencies ONLY." />

			<Label Text="Anyone using this for anything else than an emergency WILL be charged to the police." />
			<Button Text="SEND SOS" 
				BackgroundColor="Red" 
				Clicked="Handle_Clicked" 
				TextColor="White" 
				FontSize="40" />
		</StackLayout>
	</ContentPage.Content>
</ContentPage>